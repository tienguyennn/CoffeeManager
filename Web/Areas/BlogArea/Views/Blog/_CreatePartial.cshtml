@using Model.IdentityEntities
@using Model.Entities
@using Web.Areas.BlogArea.Models

@model CreateVM
@{

}

<div class="modal-dialog" style="max-width:60%;width:60%">
    @using (Ajax.BeginForm("Create", "Blog", new { @area = "BlogArea" }, new AjaxOptions()
    {
        HttpMethod = "POST",
        OnFailure = "AjaxFormError",
        OnSuccess = "AjaxFormSuccess",
    }, new { id = "createBlogForm", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        //HtmlHelper.UnobtrusiveJavaScriptEnabled = false;
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <div class="center">
                    <h4 class="modal-title">Tạo mới Blog</h4>
                </div>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-sm-2">Tiêu đề <span class="red">*</span></label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.TieuDe, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.TieuDe, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2">Mô tả </label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.MoTa, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.MoTa, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2">Nội dung <span class="red">*</span></label>
                        <div class="col-sm-10">
                            @Html.TextAreaFor(m => m.NoiDung, 4, 3, new { @class = "form-control resize-vertical" })
                            @Html.ValidationMessageFor(m => m.NoiDung, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2">Hình ảnh </label>
                        <div class="col-sm-10">
                            <input type="file" name="HinhAnhInpFile" class="form-control" />
                            @Html.ValidationMessageFor(m => m.HinhAnhInpFile, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer center">
                <button type="submit" class="btn btn-primary">Hoàn thành</button>

                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    }
</div>

<script>

    CKEDITOR.replace('NoiDung');



</script>
@Scripts.Render("~/bundles/jqueryval")
