@{
    ViewBag.Title = "Blog";
    Layout = null;
    ViewBag.ModuleName = "Quản lý Blog";
    ViewBag.PageName = "Thông tin Blog";
    ViewBag.ModuleCode = "Blog_detail";
}
@using Model.IdentityEntities
@using Model.Entities
@using Web.Areas.BlogArea.Models

@model DetailVM
@section ActionBarRight{
    <a href="/BlogArea/Blog/Index" class="btn btn-primary btn-sm"><i class="fa fa-reply" aria-hidden="true"></i> Quay lại</a>
}
<style>
    .table-info img {
        max-width: 100%;
    }
</style>
<div class="modal-dialog" style="width:60%">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <div class="center">
                <h4 class="modal-title">Chi tiết blog</h4>
            </div>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-sm-12">
                    <table class="table-info tab">

                        <tr><td>Tiêu đề</td><td>@Model.objInfo.TieuDe</td></tr>
                        <tr><td>Mô tả</td><td>@Model.objInfo.MoTa</td></tr>
                        <tr>
                            <td>Hình ảnh</td>
                            <td>
                                <img src="~/Uploads/@Model.objInfo.HinhAnh" style="width:200px;height:200px;" />
                            </td>
                        </tr>
                        <tr><td>Nội dung</td><td>@Html.Raw(Model.objInfo.NoiDung)</td></tr>


                    </table>
                </div>
            </div>
            <div class="modal-footer center">
                <button type="submit" class="btn btn-primary">Hoàn thành</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>



</div>

<script>

</script>
@Scripts.Render("~/bundles/jqueryval")
