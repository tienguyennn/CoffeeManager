@using Model.IdentityEntities
@using Model.IdentityEntities
@using Web.Areas.NotificationArea.Models
@using Service.NotificationService.Dto
@model NotificationDto
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <div class="center">
                <h4 class="modal-title">THÔNG BÁO HỆ THỐNG</h4>
            </div>
        </div>
        <div class="modal-body">
            <div class="form-horizontal">
                @Html.HiddenFor(x => x.Id)
                <div class="form-group">
                    <label class="control-label col-sm-4">Nội dung</label>
                    <div class="col-sm-8">
                        @Html.Raw(Model.Message)
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4">Người gửi </label>
                    <div class="col-sm-8">
                        <strong>@Model.FromUserName</strong>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4">Ngày gửi </label>
                    <div class="col-sm-8">
                        <strong>
                            @string.Format("{0:dd/MM/yyyy} lúc {1:HH:mm}", Model.CreatedDate, Model.CreatedDate)
                        </strong>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer center">
            <button type="button" class="btn btn-danger" data-dismiss="modal">
                <i class="fa fa-times"></i>&nbsp;Đóng
            </button>
        </div>
    </div>
</div>
