@using Model.IdentityEntities
@using Model.Entities
@using Web.Areas.DanhMucArea.Models

@model CreateVM
@{

}

<div class="modal-dialog">
    @using (Ajax.BeginForm("Create", "DanhMuc", new { @area = "DanhMucArea" }, new AjaxOptions()
    {
        HttpMethod = "POST",
        OnFailure = "AjaxFormError",
        OnSuccess = "AjaxFormSuccess",
    }, new { id = "createDanhMucForm", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        //HtmlHelper.UnobtrusiveJavaScriptEnabled = false;
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <div class="center">
                    <h4 class="modal-title">Tạo mới Danh mục sản phẩm</h4>
                </div>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-sm-4">Tên danh mục </label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.TenDanhMuc, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.TenDanhMuc, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4">Mã danh mục </label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.MaDanhMuc, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.MaDanhMuc, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4">Thứ tự </label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.ThuTu, new { @class = "form-control", type = "number" })
                            @Html.ValidationMessageFor(m => m.ThuTu, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4">Ghi chú </label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.GhiChu, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.GhiChu, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer center">
                <button type="submit" class="btn btn-primary">Hoàn thành</button>

                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    }
</div>

<script>




</script>
